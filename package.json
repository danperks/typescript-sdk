{
  "name": "@team-plain/typescript-sdk-monorepo",
  "version": "7.0.0",
  "description": "Monorepo for Plain's Typescript SDK with lazy loading",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:codegen-doc": "pnpm --filter @plain/codegen-doc build",
    "build:codegen-sdk": "pnpm --filter @plain/codegen-sdk build",
    "build:sdk": "pnpm --filter @team-plain/typescript-sdk build",
    "build": "pnpm build:codegen-doc && pnpm build:codegen-sdk && pnpm build:sdk",
    "codegen": "pnpm --filter @team-plain/typescript-sdk codegen",
    "typecheck": "tsc --noEmit && pnpm --filter @plain/codegen-doc typecheck && pnpm --filter @plain/codegen-sdk typecheck && pnpm --filter @team-plain/typescript-sdk typecheck",
    "test": "pnpm --filter @team-plain/typescript-sdk test",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "changeset": "changeset",
    "release": "pnpm build && changeset publish"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@changesets/cli": "^2.26.1",
    "@types/node": "^22.7.2",
    "rimraf": "^5.0.0",
    "rollup-plugin-gzip": "^4.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "typedoc": "^0.25.12",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typescript": "^5.1.6"
  }
}